generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum TeamType {
  club
  selection
  amateur
}

model Team {
  id     String     @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  code   String
  type   TeamType
  logo   String
  home   Fixtures[] @relation("home")
  away   Fixtures[] @relation("away")
  League League[]
}

enum LeagueType {
  league
  cup
}

model League {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  type           LeagueType
  logo           String
  season         String
  rounds         String[]   @default([])
  numberOfRounds Int
  finished       Boolean    @default(false)
  countryId      String?    @db.ObjectId
  country        Team?      @relation(fields: [countryId], references: [id])
  Fixtures       Fixtures[]
}

model Fixtures {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  fullTime    Boolean  @default(false)
  startDate   DateTime
  round       String?
  leagueId    String?  @db.ObjectId
  league      League?  @relation(fields: [leagueId], references: [id])
  homeId      String   @unique @db.ObjectId
  home        Team     @relation("home", fields: [homeId], references: [id])
  awayId      String   @unique @db.ObjectId
  away        Team     @relation("away", fields: [awayId], references: [id])
  homeScore   Int?
  awayScore   Int?
  homePenalty Int?
  awayPenalty Int?
}

model GoogleAccount {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  googleId String  @unique
  name     String
  email    String  @unique
  picture  String?
}
